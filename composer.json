{
    "name": "symbiont/symbiont",
    "description": "Symbiont is a purpose-built language for expressive data manipulations.",
    "type": "project",
    "license": "GPL-3.0-only",
    "homepage": "https://janmarten.name/symbiont",
    "authors": [
        {
            "name": "Jan-Marten de Boer",
            "email": "symbiont@janmarten.name"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4 || ^8.0@RC",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pcre": "*",
        "lib-pcre": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    },
    "bin": [
        "bin/symbiont"
    ],
    "autoload": {
        "psr-4": {
            "Symbiont\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symbiont\\Test\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/dev",
            "/.dockerignore",
            "/.gitignore",
            "/tests",
            "/examples"
        ]
    }
}
